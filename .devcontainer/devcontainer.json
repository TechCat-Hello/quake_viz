{
  "name": "Python Django Development",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "workspaceFolder": "/workspace",
  "extensions": [
    "ms-python.python",
    "dbaeumer.vscode-eslint"
  ],
  "settings": {
    "python.pythonPath": "/workspace/.venv/bin/python"
  },
  "postCreateCommand": "pip install -r requirements.txt",
  "remoteUser": "root"
}

